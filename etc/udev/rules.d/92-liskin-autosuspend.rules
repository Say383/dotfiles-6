ACTION!="add|bind", GOTO="liskin-autosuspend-ignore"

# T25 touchscreen
SUBSYSTEM=="usb", ENV{PRODUCT}=="2386/310e/0", GOTO="liskin-autosuspend-ignore"

# T25 card reader
SUBSYSTEM=="usb", ENV{PRODUCT}=="bda/316/204", GOTO="liskin-autosuspend-ignore"

# ThinkPad Ultra Dock
SUBSYSTEM=="usb", ENV{PRODUCT}=="17ef/1010/*", GOTO="liskin-autosuspend-ignore"

# usbhid devices (mouse, â€¦)
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_interface", ENV{DRIVER}=="usbhid", GOTO="liskin-autosuspend-disable-parent"

LABEL="liskin-autosuspend-enable"
TEST=="power/control", ATTR{power/control}="auto"
TEST=="power/autosuspend_delay_ms", ATTR{power/runtime_status}!="unsupported", ATTR{power/autosuspend_delay_ms}="2000"
GOTO="liskin-autosuspend-ignore"

LABEL="liskin-autosuspend-disable-parent"
TEST=="../power/control", ATTR{../power/control}="on"
GOTO="liskin-autosuspend-ignore"

LABEL="liskin-autosuspend-ignore"
