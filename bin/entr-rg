#!/usr/bin/env bash

set -eu -o pipefail

if (( ! $# )); then
	echo "Usage: entr-rg [<rg --files args ...> --] <entr args>"
	exit 1
fi

rg_files_args=()
entr_args=()

for arg in "$@"; do
	if [[ "$arg" == "--" ]]; then
		rg_files_args=("${entr_args[@]}")
		entr_args=()
	else
		entr_args+=("$arg")
	fi
done

# hack for entr 4.3, shouldn't be needed in 4.4
ulimit -S -n 65536

while sleep 0.2; do
	rg --files "${rg_files_args[@]}" | { entr -d "${entr_args[@]}" || :; }
done
