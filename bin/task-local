#!/usr/bin/env bash

# project-local taskwarrior wrapper

set -eu -o pipefail
shopt -s lastpipe

git config --get taskwarrior.project | read -r project \
|| exec task "$@"

function gen-config {
	cat <<-END
		include ~/.taskrc

		context=local
		context.local=proj:$project
		default.project=$project
	END
}

TASKRC=<(gen-config) exec task "$@"
