#!/usr/bin/env bash

set -eu -o pipefail

randr=$(xrandr --query)

out_eDP=$(<<<"$randr" awk '/^eDP.* connected/ { print $1 }')
[[ $out_eDP ]]

out_HDMI=$(<<<"$randr" awk '/^HDMI.* connected/ { print $1 }')
[[ $out_HDMI ]]

xrandr \
	--output "$out_HDMI" --mode 1920x1200 --pos 0x0 --dpi 96 --primary \
	--output "$out_eDP" --off
