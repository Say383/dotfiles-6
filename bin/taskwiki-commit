#!/usr/bin/env bash

set -eu

if compgen -v | grep ^GIT_; then
	exit 1
fi

cd ~/taskwiki
[[ "$(git symbolic-ref HEAD)" == "refs/heads/master" ]]
git add .
git diff --cached --exit-code --quiet && diff=$? || diff=$?
[[ $diff != 1 ]] && exit $diff
git commit -m "$(date --iso-8601=seconds)"
git gc-auto-exact 100
