#!/usr/bin/env bash

set -eu

xmonadctl-raw dnd-on

function dnd-off {
	xmonadctl-raw dnd-off || :
	xprop -root -f _XMOBAR_DND 8u -set _XMOBAR_DND "" || :
}

trap 'dnd-off' EXIT
for (( count=${1:-30}; count > 0; --count )); do
	xprop -root -f _XMOBAR_DND 8u -set _XMOBAR_DND " <fn=3>"$'\ufb96'" </fn>$count"
	sleep 1m
done
